<h4>Update this store</h4>

<form action="/stores/<%= @store.id %>" method="post">
  <label for="name">Name:</label><input type="text" name="name" value="<%= @store.name %>">
  <label for="address">Address:</label><input type="text" name="address" value="<%= @store.address %>">
  <label for="category">Category:</label><input type="text" name="category" value="<%= @store.category %>">

  <input type="submit" class="button">
</form>